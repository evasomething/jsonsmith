{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "declaration": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "importHelpers": true,

    "lib": ["dom", "es2016"],
    "target": "es5",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "baseUrl": "src"
  },
  "include": [
    "**/*.ts",
    "*.ts",
    "typings/**/*.d.ts"
  ],
  "files": [
    "src/index.ts"
  ]
}

